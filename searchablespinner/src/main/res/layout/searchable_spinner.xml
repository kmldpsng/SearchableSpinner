<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/searchableSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shade_spinner_background"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="1dp">

        <!--android:maxLength="30"-->
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:ems="10"

            android:enabled="false"
            android:hint="No Selection"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <LinearLayout
            android:id="@+id/llImageSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/red_shade_spinner_background">

            <ImageView
                android:id="@+id/imageSearch"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/down_arrow_white"
                android:tag="down" />

        </LinearLayout>


    </LinearLayout>
</merge>